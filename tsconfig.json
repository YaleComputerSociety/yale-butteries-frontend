{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/*"],
      "@env": ["node_modules/react-native-dotenv"]
    },
    "jsx": "react",
    "strictNullChecks": true,
    "outDir": "./dist"
  },
  "exclude": ["**/*.spec.ts", "node_modules", "dist"],
  "compileOnSave": false,
  "typeRoots": ["./types"]
}

